<section class="w-full bg-neutral-800 flex justify-center items-center lg:py-10 py-5">
  <div class="bg-aero-camp bg-cover bg-bottom h-screen-3/4 max-w-3xl px-5 lg:rounded-2xl lg:border-2 lg:border-black pb-5 text-white">
    <div class="flex flex-col justify-end h-full items-center drop-shadow-2xl transform-gpu" x-data>
      <h2 class="w-4/5 font-bold text-xl lg:text-3xl">Ready To Become A <span class="text-custom-50">Private</span> Pilot?</h2>
      <p class="w-4/5 py-5 text-lg lg:text-xl font-semibold">At Sun City Aviation Academy, we are dedicated to training you into a capable, adaptable, proficient, and safe private pilot.</p>
      <div class="opacity-0 duration-[1500ms] translate-y-24 text-center w-full flex flex-col items-start" x-intersect="$el.classList.add('opacity-100', 'translate-y-1', 'z-0')">
        <%=link_to root_path, data: { turbo: false }, class: "mx-auto" do%>
          <div class="btn-primary">
            START TODAY
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>