
  <%= render "shared/header_nav_phone"%>
  <div class="sticky top-0" x-data="{ 'showEnrollment': false }" @keydown.escape="showEnrollment = false">
  <!-- Modal -->
    <div
      class="fixed inset-0 z-30 flex items-center justify-center overflow-auto bg-black bg-opacity-50"
      x-show="showEnrollment"
      x-cloak
    >
      <!-- Modal inner -->
      <div
          class="w-full lg:w-1/2 px-6 py-4 mx-auto text-left bg-white rounded shadow-lg"
          @click.away="showEnrollment = false"
          x-transition:enter="motion-safe:ease-out duration-300"
          x-transition:enter-start="opacity-0 scale-90"
          x-transition:enter-end="opacity-100 scale-100"
      >
        <!-- Title / Close-->
        <div class="flex items-center justify-between pb-5">
          <h4 class="mr-3 text-black max-w-none"></h4>
          <button type="button" class="z-50 cursor-pointer" @click="showEnrollment = false">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <!-- content -->
        <div>
          <%= turbo_frame_tag "frame5", class: "w-full" do %>
            <%= render "enrollments/form",  enrollment: @enrollment %>
          <%end%>
        </div>
      </div>
    </div>
  </div>
  <%= render "shared/header_nav_icon"%>