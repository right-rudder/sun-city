<header class="w-full bg-home bg-office h-screen lg:h-screen bg-cover bg-center flex justify-center items-center text-white">
  <div class="px-5 py-40 lg:py-52 flex flex-col justify-center items-start w-full">
      <h1 class="font-bold text-5xl text-center lg:text-start">Visit Sun City Aviation Academy</h1>
      <h2 class="font-bold text-4xl text-center lg:text-start py-10">Stop by our flight school <br class="hidden lg:block">in North Perry Airport</h2>
      <div class="w-full flex flex-col items-center lg:hidden">
        <a href="#quiz-frame", class="btn-primary"
          onclick="event.preventDefault(); document.getElementById('quiz-frame').scrollIntoView({ behavior: 'smooth' });">
          SCHEDULE NOW
        </a>
      </div>
  </div>
</header>

<turbo-frame id="quiz-frame">
  <div class=" lg:absolute right-5 top-10 z-50 bg-white lg:rounded-xl lg:border pb-5 lg:overflow-y-auto lg:max-h-[92vh]">
    <%= render "form", checkout: @checkout %>
  </div>
</turbo-frame>

<div class="hidden lg:block px-2">
  <%= render "shared/bottom_footer"%>
</div>

<div class="lg:hidden w-full pt-16 pb-5 pl-5">
  <%= render "shared/bottom_footer"%>
</div>